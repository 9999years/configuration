{
    "languageserver": {
        "dhall": {
            "command": "dhall-lsp-server",
            "filetypes": [
                "dhall"
            ]
        },
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "haskell": {
            "command": "hie-wrapper",
            "rootPatterns": [
                ".stack.yaml",
                "cabal.config",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "initializationOptions": {
                "languageServerHaskell": {
                    "hlintOn": true
                }
            }
        },
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod"
            ],
            "filetypes": [
                "go"
            ]
        }
    },
    "python.formatting.provider": "black",
    "python.autoComplete.addBrackets": true,
    "python.linting.mypyEnabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pep8Enabled": false,
    "java.format.settings.url": "/home/cervina/.config/coc/extensions/node_modules/redhat.java/eclipse-formatter.xml",
    "java.home": "/usr/lib/jvm/java-1.11.0-openjdk-amd64/",
    "diagnostic-languageserver.linters": {
        "nim": {
            "command": "nim",
            "args": ["compile", "-"],
            "sourceName": "nim",
            "isStdout": false,
            "isStderr": true,
            "formatLines": 1,
            "formatPattern": [
                "[^(]+\\((\\d+), (\\d+)\\) ([^:]+): (.*)$",
                {
                    "line": 1,
                    "column": 2,
                    "security": 3,
                    "message": [4]
                }
            ],
            "securities": {
                "error": "Error",
                "warning": "Warning",
                "note": "Hint"
            }
        }
    },
    "diagnostic-languageserver.filetypes": {
        "vim": "vint",
        "plain": "write-good",
        "markdown": [
            "write-good",
            "markdownlint"
        ],
        "sh": "shellcheck",
        "nim": "nim"
    },
    "latex.lint.onChange": false,
    "latex.lint.onSave": false,
    "rust.clippy_preference": "on",
    "rust.rustflags": "-A dead_code -A unused_imports",
    "coc.preferences.formatOnSaveFiletypes": [
        "rust",
        "json",
        "go"
    ],
    "snippets.ultisnips.enable": false,
    "suggest.snippetIndicator": " âœ‚",
    "codeLens.enable": true,
    "suggest.enablePreview": true,
    "suggest.floatEnable": true
}
