{
    "$schema": "./dotfiles_schema.json",
    "dotfiles": [
        ".bash_profile",
        ".bashrc",
        ".curlrc",
        ".fonts.conf",
        ".gitattributes_global",
        ".gitconfig",
        ".gitignore_global",
        ".latexmkrc",
        ".minttyrc",
        ".pip.conf",
        ".ptpython/config.py",
        ".pythonrc",
        ".tmux.conf",
        ".tmux.conf.sh",
        ".Xresources",
        ".youtube-dl.conf",
        ".spacemacs",
        ".config/i3",
        ".config/topgrade.toml",
        ".config/mimeapps.list",
        ".config/fish",
        ".config/fisher_local/fishfile",
        {
            "path": ".config/fisher_local/fishfile",
            "dest": ".config/fish/fishfile"
        },
        ".config/alacritty/alacritty.yml",
        {
            "path": "AppData/Roaming/ConEmu.xml",
            "when": {
                "platform": "win32"
            }
        }
    ]
}
